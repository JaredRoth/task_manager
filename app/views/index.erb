<div class="col-md-9 col-md-offset-1">
<!-- <h1>All Tasks</h1> -->
<table class="table table-striped table-bordered table-hover">
  <tr>
    <th class="text-center">ID</th>
    <th class="text-center">Title</th>
    <th class="text-center">Edit</th>
    <th class="text-center">Delete</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr class="text-center">
      <td><a href="/tasks/<%=task.id%>"><%= task.id %></a></td>
      <td><a href="/tasks/<%=task.id%>"><%= task.title %></a></td>
      <td class="col-md-1">
        <a class="btn btn-primary" href="/tasks/<%=task.id%>/edit" role="button">Edit Task</a>
      </td>
      <td class="col-md-1"><form class="col-md-1" action="/tasks/<%=task.id%>" method="delete">
        <button class="btn btn-danger" type="submit">Remove Task</button>
      </form></td>
    </tr>
  <% end %>
</table>
</div>
