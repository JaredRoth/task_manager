<form action="/tasks" method="post">

  <div class="col-md-6 col-md-offset-1">

    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" class="form-control" name="task[title]" id="title"/><br/>
    </div>

    <div class="form-group">
      <label for="description">Description:</label>
      <textarea name="task[description]" class="form-control" id="description"></textarea><br/>
    </div>

    <input class="btn btn-primary" type="submit" value="Create This Task">

  </div>

</form>
